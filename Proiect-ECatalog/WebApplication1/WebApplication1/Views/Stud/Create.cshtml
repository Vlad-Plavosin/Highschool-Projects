@model WebApplication1.Models.Info

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Adauga Elev</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Nume"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Prenume"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Teza"></label>
                    </div>
                    <div class="col-3">
                        <label>Note</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Nume" class="form-control" />
                        <span asp-validation-for="Nume" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Prenume" class="form-control" />
                        <span asp-validation-for="Prenume" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Teza" class="form-control" />
                        <span asp-validation-for="Teza" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Nota1" class="form-control" />
                        <span asp-validation-for="Nota1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row justify-content-end">
                    <div class="col-3">
                        <input asp-for="Nota2" class="form-control" />
                        <span asp-validation-for="Nota2" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row justify-content-end">
                    <div class="col-3">
                        <input asp-for="Nota3" class="form-control" />
                        <span asp-validation-for="Nota3" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Adauga" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Inapoi</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}


